<% if @song.errors.any? %>
  <div>
    <strong>There were some issues with your submission:</strong>
    <ul>
      <% @song.errors.full_messages.each do |message| %>
      <li><%=message %> </li>
      <%end%>
    </ul>
  </div>
<%end%>

<form method="post" action="/songs">
  <div class="form-group">
    <label>Title:</label>
    <input type="text" class="form-control" name="title" placeholder="Song Title" value="<%= @song.title%>">
  </div>
  <div class="form-group">
    <label>Artist:</label>
    <input type="text" class="form-control" name="artist" placeholder="Artist" value="<%= @song.artist%>">
  </div>
  <div class="form-group">
    <label>url:</label>
    <input type="text" class="form-control" name="url" placeholder="eg. Youtube" value="<%=@song.url%>">
  </div>
  <div class="btn btn-default">
    <input type="submit" value="Submit">
  </div>
</form>